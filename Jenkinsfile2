pipeline {
    agent any

    stages {
        stage('Run SSH Command on Remote Server') {
            steps {
                script {
                    sshagent(['SSH_PEM']) {
                        // Your SSH commands go here
                        sh 'ssh -o StrictHostKeyChecking=no -l cloudbees your-remote-host uname -a'
                    }
                }
            }
        }

        // Add more stages as needed
    }
}
